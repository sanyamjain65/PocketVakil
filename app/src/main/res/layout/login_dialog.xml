<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.app.pocketvakil.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="abc"
        android:id="@+id/tv_loginMsg"
        app:font="@string/OpenSans_Reguler"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="15sp"
        />
    <com.app.pocketvakil.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_loginMsg"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/white"
        app:font="@string/OpenSans_Reguler"
        android:id="@+id/tv_ok"
        android:textSize="18sp"
        android:text="@string/login_dialog"
        android:background="@drawable/dialog_blue_button"
        android:layout_marginTop="20dp"/>

</RelativeLayout>